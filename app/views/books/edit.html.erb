<div class="body">
	<div class="container">
		<p id="notice"></p>
		<% if @book.errors.any? %>
		<div class="flash">
			<%= @book.errors.count %>errors
			<ul>
                  <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
 			</ul>
		</div>
		<% end %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<%= form_for(@book) do |f| %>
				<div class="edit_book">
					<div class="field row">
						<label class="book_title">Title</label>
						<%= f.text_field :title, class: "col-xs-12 book_title", id: "book_title" %>
					</div>
					<div class="field row">
						<label class="book_opinion">Opinion</label>
						<%= f.text_area :body, class: "col-xs-12 book_body", id: "book_body" %>
					</div>
					<div class="actions row">
						<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
					</div>
					<% end %>
					<%= link_to 'Show', book_path(@book.id),class: "book_25483" %>
					|
					<%= link_to 'Back', books_path, class: "back" %>
				</div>
		</div>
	</div>
</div>