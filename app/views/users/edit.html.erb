<div class="body">
	<div class="container">
		<p id="notice"></p>
		<% if @user.errors.any? %>
		<div class="flash">
			<%= @user.errors.count %>errors
			<ul>
                  <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
 			</ul>
		</div>
		<% end %>
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
		<div class="edit_user">
			<div class="field">
				<label class="user_name">Name</label>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<label class="user_image">Image</label>
				<%= f.attachment_field :profile_image %>
			</div>
			<div class="field">
				<label class="user_introduction">Introduction</label>
				<%= f.text_area :introduction %>
			</div>
			<div class="actions">
				<%= f.submit "Update User" %>
			</div>
		</div>
		<% end %>
	</div>
</div>