<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: 'jpeg', class: "attachment user profile_image", fallback: "no_image.jpg"%>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
				<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glypicon-wrench edit_user_15512" %>
				</div>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

<div class="field row">
	<label class="book_title">Title</label>
	<%= f.text_field :title, class: "col-xs-12 book_title" %>
</div>
<div class="field row">
	<label class="book_opinion">Opinion</label>
	<%= f.text_area :body, class: "col-xs-12 book_body" %>
</div>
<div class="actions row">
	<%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
</div>
<% end %>
</div>
<div class="col-xs-9">
	<h2>Users</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td></td>
				<td><%= attachment_image_tag user, :profile_image, :fill, 40,40, format: 'jpeg', class: "attachment user profile_image", fallback: "no_image.jpg"%></td>
				<td><%= user.name %></td>
				<td><%= link_to 'Show', user_path(user.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

</div>
</div>
</div>


